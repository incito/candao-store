	<insert id="insert" parameterType="com.candao.www.data.model.TbUserInstrument">

         
		insert into t_user_instrument (
	    id,
		userid,
		instrumentid,
		inserttime,
		logintime,
		logouttime,
		status,
		tableno
	     
	   )values (
	     #{id},
	     #{userid},
	     #{instrumentid},
	     now(),
	     now(),
	     #{logouttime},
		 #{status},
		 #{tableno}
	   )
	
	   
	</insert>

